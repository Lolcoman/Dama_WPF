<Window x:Class="Dama_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dama_WPF"
        mc:Ignorable="d"
        Title="Gotická dáma" Height="700" Width="900"  ResizeMode="NoResize">
    <Grid>
        <Menu Height="30" VerticalAlignment="Top">
            <MenuItem Header="Hra" Height="30" Width="100">
                <MenuItem x:Name="NewGameMenu" Header="Nová hra" Click="NewGameMenu_Click"/>
                <Separator HorizontalAlignment="Left" Height="0" Width="140"/>
                <MenuItem x:Name="LoadGameMenu" Header="Načíst hru" Click="LoadGameMenu_Click"/>
                <MenuItem x:Name="SaveGameMenu" Header="Uložit hru"/>
                <Separator HorizontalAlignment="Left" Height="0" Width="140"/>
                <MenuItem x:Name="ExitGameMenu" Header="Ukončit hru" Click="ExitGameMenu_Click"/>
            </MenuItem>
            <MenuItem Header="Nástroje" Height="30" Width="100"/>
            <MenuItem Header="Nápověda" Height="30" Width="100"/>
        </Menu>
        <Canvas x:Name="BoardCanvas" Margin="10,40,0,0" MouseDown="BoardCanvas_MouseDown" Height="600" VerticalAlignment="Top" HorizontalAlignment="Left" Width="600"/>
        <ListView x:Name="HistorieList" HorizontalAlignment="Left" Height="185" Margin="628,284,0,0" VerticalAlignment="Top" Width="256">
        </ListView>
        <Label Content="Historie tahů" HorizontalAlignment="Left" Margin="628,246,0,0" VerticalAlignment="Top" Height="33" Width="112"/>
        <Rectangle Fill="mediumpurple" Margin="0,0,274,621" Height="10" VerticalAlignment="Bottom"/>
        <Rectangle Fill="mediumpurple" Height="10" Margin="0,640,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="620"/>
        <Rectangle Fill="MediumPurple" HorizontalAlignment="Left" Height="10" Margin="-295,335,0,0" VerticalAlignment="Top" Width="600" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle Fill="mediumpurple" Margin="310,340,-26,0" RenderTransformOrigin="0.5,0.5" Height="10" VerticalAlignment="Top" HorizontalAlignment="Left" Width="610">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
    </Grid>

</Window>

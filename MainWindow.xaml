<Window x:Class="Dama_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dama_WPF"
        mc:Ignorable="d"
        Title="Gotická dáma" Height="700" Width="900"  ResizeMode="NoResize">
    <Grid>
        <Menu Height="30" VerticalAlignment="Top">
            <MenuItem Header="Hra" Height="30" Width="100">
                <MenuItem x:Name="NewGameMenu" Header="Nová hra" Click="NewGameMenu_Click"/>
                <Separator HorizontalAlignment="Left" Height="0" Width="140"/>
                <MenuItem x:Name="LoadGameMenu" Header="Načíst hru" Click="LoadGameMenu_Click"/>
                <MenuItem x:Name="SaveGameMenu" Header="Uložit hru"/>
                <Separator HorizontalAlignment="Left" Height="0" Width="140"/>
                <MenuItem x:Name="ExitGameMenu" Header="Ukončit hru" Click="ExitGameMenu_Click"/>
            </MenuItem>
            <MenuItem Header="Nástroje" Height="30" Width="100"/>
            <MenuItem Header="Nápověda" Height="30" Width="100"/>
        </Menu>
        <Border x:Name="Border" BorderBrush="SlateGray" BorderThickness="10" Margin="0,30,0,0" Height="620" VerticalAlignment="Top" HorizontalAlignment="Left" Width="620" CornerRadius="10"/>
        <Canvas x:Name="BoardCanvas" Margin="10,40,0,0" MouseDown="BoardCanvas_MouseDown" Height="600" VerticalAlignment="Top" HorizontalAlignment="Left" Width="600"/>
        <ListView x:Name="HistorieList" Height="185" Margin="628,284,10,0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="2"/>
        <Label Content="Historie tahů" HorizontalAlignment="Left" Margin="628,246,0,0" VerticalAlignment="Top" Height="33" Width="112"/>
        <Label x:Name="OnMoveLabel" Content="NaTahuje" HorizontalAlignment="Left" Margin="628,40,0,0" VerticalAlignment="Top" Width="150" FontWeight="Bold" FontSize="20" FontFamily="Arial"/>
        <Label x:Name="RoundsLabel" Content="Label" HorizontalAlignment="Left" Margin="628,78,0,0" VerticalAlignment="Top" Height="29" Width="112" FontSize="16" FontWeight="Bold"/>
    </Grid>

</Window>
